{
  "name": "gram",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/gram/src",
  "projectType": "library",
  "release": {
    "version": {
      "currentVersionResolver": "git-tag",
      "preserveLocalDependencyProtocols": false,
      "manifestRootsToUpdate": ["dist/{projectRoot}"]
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/gram",
        "main": "packages/gram/src/index.ts",
        "tsConfig": "packages/gram/tsconfig.lib.json",
        "assets": ["packages/gram/*.md"],
        "generatePackageJson": true,
        "format": ["cjs"]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/packages/gram",
        "passthroughEnvironment": ["GRAM_CORPUS_ROOT"]
      },
      "inputs": [
        "default",
        "^default",
        {
          "input": "{workspaceRoot}/tree-sitter-gram/test/corpus/**/*",
          "projects": []
        }
      ]
    }
  }
}
